{
    "info": {
        "name": "Echo Backend API",
        "description": "Golden Collection for Echo Backend V1",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@cu.edu.ng\",\n    \"password\": \"password123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "users",
                                "login"
                            ]
                        }
                    },
                    "response": [
                        {
                            "name": "Login Success",
                            "originalRequest": {
                                "method": "POST",
                                "header": [],
                                "body": {
                                    "mode": "raw",
                                    "raw": "{\n    \"email\": \"admin@cu.edu.ng\",\n    \"password\": \"password123\"\n}"
                                },
                                "url": "{{baseUrl}}/users/login"
                            },
                            "status": "OK",
                            "code": 200,
                            "header": [],
                            "body": "{\n    \"id\": 1,\n    \"email\": \"admin@cu.edu.ng\",\n    \"firstName\": \"Admin\",\n    \"lastName\": \"User\",\n    \"role\": \"ADMIN\",\n    \"organizationId\": 1,\n    \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\"\n}"
                        }
                    ]
                },
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"student@cu.edu.ng\",\n    \"password\": \"password123\",\n    \"firstName\": \"New\",\n    \"lastName\": \"Student\",\n    \"level\": 2\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{baseUrl}}/users/register"
                    }
                },
                {
                    "name": "Org Waitlist Request",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"organizationName\": \"New University\",\n    \"domain\": \"new.edu\",\n    \"requesterEmail\": \"dean@new.edu\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{baseUrl}}/users/organization-waitlist"
                    }
                }
            ]
        },
        {
            "name": "Pings",
            "item": [
                {
                    "name": "Get Feed (All Pings)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pings?page=1&limit=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "pings"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Ping",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Library AC Not Working\",\n    \"content\": \"The 3rd floor AC has been broken for 2 days.\",\n    \"categoryId\": 1,\n    \"images\": [\"https://example.com/ac.jpg\"]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{baseUrl}}/pings"
                    }
                },
                {
                    "name": "Search Pings",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/pings/search?q=ac",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "pings",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "ac"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Waves",
            "item": [
                {
                    "name": "Create Wave",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"solution\": \"We brought a portable fan in the meantime.\",\n    \"images\": []\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{baseUrl}}/pings/24/waves"
                    }
                }
            ]
        },
        {
            "name": "Interactions",
            "item": [
                {
                    "name": "Surge Ping",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/pings/24/surge"
                    }
                },
                {
                    "name": "Comment on Ping",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"content\": \"I noticed this too!\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{baseUrl}}/pings/24/comments"
                    }
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Platform Stats",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/admin/stats"
                    }
                },
                {
                    "name": "Export Pings CSV",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/admin/export/pings"
                    },
                    "response": [
                        {
                            "name": "CSV Export Example",
                            "status": "OK",
                            "code": 200,
                            "header": [
                                {
                                    "key": "Content-Type",
                                    "value": "text/csv"
                                }
                            ],
                            "body": "ID,Date,Category,Title,Status,Surge Count,Days Open,Resolved\n24,2026-01-04,Academic,New Ping Title,POSTED,0,21,false"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Meta",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/health"
                    }
                },
                {
                    "name": "Get Categories",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/categories"
                    }
                }
            ]
        }
    ]
}