{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,

    "types": ["node", "vitest"],

    "outDir": "dist",

    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}