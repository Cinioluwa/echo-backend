{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true,

    "outDir": "dist",
    "rootDir": "src",

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}