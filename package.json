{
  "name": "echo-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "prebuild": "prisma generate",
    "build": "tsc -p tsconfig.build.json",
    "start": "prisma migrate deploy && node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pretest": "npx prisma generate --schema=prisma/test/test-schema.prisma",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run",
    "pretest:e2e": "npx prisma generate --schema=prisma/test/test-schema.prisma",
    "test:e2e": "playwright test",
    "clean:e2e-artifacts": "node scripts/clean-e2e-artifacts.mjs",
    "clean:e2e-artifacts:dry": "node scripts/clean-e2e-artifacts.mjs --dry-run",
    "cleanup:stale-org-requests": "node scripts/cleanup-stale-org-requests.mjs --dry-run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "pg": "^8.16.3",
    "prisma": "^6.16.3",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.10.0",
    "resend": "^4.0.0",
    "sentiment": "^5.0.2",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.57.0",
    "@testcontainers/postgresql": "^10.14.0",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.2",
    "@types/nodemailer": "^6.4.15",
    "@types/sentiment": "^5.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "nodemon": "^3.1.10",
    "playwright": "^1.49.1",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "testcontainers": "^10.14.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  }
